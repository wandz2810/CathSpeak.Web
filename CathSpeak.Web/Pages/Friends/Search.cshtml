@page
@model CathSpeak.Web.Pages.Friends.SearchModel
@{
    ViewData["Title"] = "Find Friends";
}

<div class="search-container">
    <div class="page-header">
        <h1><i class="fas fa-search"></i> Find Friends</h1>
        <a href="/Friends" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Friends
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">
            @Model.Message
        </div>
    }

    <div class="search-section">
        <form method="post" asp-page-handler="Search" class="search-form">
            <div class="search-input-group">
                <input asp-for="SearchTerm" class="form-control" placeholder="Search by username, email, or language level..." />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>
    </div>

    <div class="results-section">
        <h2>
            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <span>Search Results for "@Model.SearchTerm" (@Model.SearchResults.Count found)</span>
            }
            else
            {
                <span>Discover People (@Model.SearchResults.Count users)</span>
            }
        </h2>

        @if (Model.SearchResults.Any())
        {
            <div class="users-grid">
                @foreach (var user in Model.SearchResults)
                {
                    <div class="user-card">
                        <img src="@(user.AvatarImageUrl ?? "/images/default-avatar.png")"
                             alt="@user.Username" class="avatar" />
                        <div class="user-info">
                            <h3>@user.Username</h3>
                            <p class="level"><i class="fas fa-graduation-cap"></i> @user.Level Level</p>
                            @if (!string.IsNullOrEmpty(user.Address))
                            {
                                <p class="location"><i class="fas fa-map-marker-alt"></i> @user.Address</p>
                            }
                            <p class="joined"><i class="fas fa-calendar"></i> Joined @user.CreateDate.ToString("MMM yyyy")</p>
                        </div>
                        <div class="user-actions">
                            <form method="post" asp-page-handler="SendRequest">
                                <input type="hidden" name="userId" value="@user.AccountId" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-user-plus"></i> Add Friend
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-search"></i>
                <h3>No users found</h3>
                <p>Try adjusting your search terms or browse all users.</p>
            </div>
        }
    </div>
</div>

<style>
    .search-container {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e1e5e9;
    }

    .search-section {
        margin-bottom: 2rem;
    }

    .search-form {
        max-width: 600px;
        margin: 0 auto;
    }

    .search-input-group {
        display: flex;
        gap: 0.5rem;
    }

        .search-input-group .form-control {
            flex: 1;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

    .results-section h2 {
        color: #333;
        margin-bottom: 1.5rem;
    }

    .users-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .user-card {
        background: white;
        border: 1px solid #e1e5e9;
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        text-align: center;
    }

        .user-card:hover {
            transform: translateY(-2px);
        }

    .avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .user-info h3 {
        margin: 0 0 0.5rem 0;
        color: #333;
        font-size: 1.2rem;
    }

    .user-info p {
        margin: 0.25rem 0;
        color: #666;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .level {
        color: #667eea !important;
        font-weight: 500;
    }

    .user-actions {
        margin-top: 1rem;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
        padding: 0.75rem 1rem;
        border-radius: 5px;
        margin-bottom: 1rem;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #666;
    }

        .empty-state i {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 1rem;
        }
</style>