        border-radius: 0 5px 5px 0;
        padding: 0 15px;
        cursor: pointer;
    }

    .notification-button {
        background: none;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
    }

    /* Banner section */
    .banner-section {
        position: relative;
        margin: 10px 30px;
        border-radius: 10px;
        overflow: hidden;
        height: 150px;
        background-color: #555;
        background-size: cover;
