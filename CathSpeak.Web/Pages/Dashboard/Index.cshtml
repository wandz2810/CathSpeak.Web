        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid var(--gray-light);
    }

        .room-header h3 {
            margin: 0;
            font-size: 14px;
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .room-options {
        background: none;
        border: none;
        font-size: 14px;
        cursor: pointer;
        color: var(--gray-dark);
        padding: 0;
    }

    .room-content {
        position: relative;
        height: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
    }

        .room-content::before {
            content: "";
            position: absolute;
            top: 10px;
            left: 10px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: #ccc;
        }

        .room-content.green-status::before {
            background-color: var(--success);
        }

        .room-content.red-status::before {
            background-color: var(--danger);
        }

    .room-avatar {
        text-align: center;
    }

        .room-avatar img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

    .room-avatar-label {
        margin-top: 5px;
        font-size: 11px;
        color: var(--gray-dark);
        text-transform: uppercase;
    }

    .room-footer {
        display: flex;
        justify-content: space-between;
        padding: 8px 10px;
        background-color: #f5f5f5;
        font-size: 12px;
    }

    .room-capacity {
