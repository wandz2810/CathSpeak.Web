<style>
    /* Reset and Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        background-color: #fff;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    /* Navigation */
    .main-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
    }

    .logo img {
        height: 40px;
    }

    .nav-links {
        display: flex;
        gap: 30px;
    }

        .nav-links a {
            color: #fff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }

            .nav-links a:hover {
                color: rgba(255,255,255,0.8);
            }

    .nav-actions {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .language-selector {
        color: #fff;
        display: flex;
        align-items: center;
        gap: 5px;
        cursor: pointer;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

    .btn-light {
        background-color: #fff;
        color: #8B0000;
    }

    .btn-accent {
        background-color: #fff;
        color: #8B0000;
        padding: 12px 25px;
    }

    .btn-secondary {
        background-color: #8B0000;
        color: #fff;
        padding: 10px;
        width: 100%;
    }

    .btn-sm {
        padding: 8px 15px;
        font-size: 0.9rem;
    }

    /* Hero Section */
    .hero-section {
        background-color: #8B0000;
        color: #fff;
        padding: 0 0 100px;
        overflow: hidden;
    }

    .hero-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 50px;
    }

    .hero-text h1 {
        font-size: 3rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 20px;
    }

    .text-accent {
        color: #fff;
    }

    .text-gold {
        color: #FFD700;
    }

    .hero-text p {
        font-size: 1.1rem;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .hero-image {
        position: relative;
    }

        .hero-image img {
            position: relative;
            z-index: 2;
            max-width: 100%;
            height: auto;
            border-radius: 20px;
            transform: rotate(3deg);
        }

        .hero-image:before {
            content: "";
            position: absolute;
            top: -20px;
            right: -20px;
            width: 90%;
            height: 90%;
            background-color: #FFE4B5;
            border-radius: 20px;
            z-index: 1;
        }

    /* Values Section */
    .values-section {
        padding: 80px 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .section-label {
        font-size: 0.9rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: block;
        margin-bottom: 10px;
    }

    .section-header h2 {
        font-size: 2.5rem;
        color: #333;
        font-weight: 700;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .value-card {
        text-align: center;
        padding: 30px 20px;
    }

    .value-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

        .value-icon i {
            font-size: 1.8rem;
            color: #fff;
        }

    .blue {
        background-color: #E6F0FF;
    }

        .blue i {
            color: #4D7CFE;
        }

    .orange {
        background-color: #FFF1E6;
    }

        .orange i {
            color: #FF7A45;
        }

    .purple {
        background-color: #F0E6FF;
    }

        .purple i {
            color: #9254DE;
        }

    .value-card h3 {
        margin-bottom: 15px;
        font-weight: 600;
        color: #333;
    }

    .value-card p {
        color: #666;
    }

    /* FAQ Section */
    .faq-section {
        background-color: #8B0000;
        color: #fff;
        padding: 80px 0;
    }

        .faq-section .section-header h2 {
            color: #fff;
        }

        .faq-section .section-label {
            color: rgba(255,255,255,0.7);
        }

    .faq-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .faq-item {
        background-color: #8B0000;
        border-radius: 8px;
        margin-bottom: 15px;
        overflow: hidden;
    }

    .faq-question {
        padding: 15px;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 8px;
    }

        .faq-question h3 {
            font-size: 1rem;
            font-weight: 500;
            margin: 0;
        }

    .faq-toggle {
        color: #FFD700;
    }

    .faq-answer {
        padding: 0 15px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease, padding 0.3s ease;
    }

        .faq-answer.visible {
            padding: 15px;
            max-height: 200px;
            border: 1px solid rgba(255,255,255,0.2);
            border-top: none;
            border-radius: 0 0 8px 8px;
        }

    .faq-item.active .faq-question {
        background-color: rgba(255,255,255,0.1);
        border-radius: 8px 8px 0 0;
    }

    /* Footer */
    .site-footer {
        background-color: #fff;
        padding: 80px 0 20px;
        position: relative;
    }

    .footer-main {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 40px;
        margin-bottom: 40px;
    }

    .footer-column h4 {
        color: #333;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .footer-links {
        list-style: none;
    }

        .footer-links li {
            margin-bottom: 10px;
        }

        .footer-links a {
            color: #666;
            text-decoration: none;
            transition: color 0.3s;
        }

            .footer-links a:hover {
                color: #8B0000;
            }

    .contact-form .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .footer-social {
        margin-top: 20px;
    }

    .social-icons {
        display: flex;
        gap: 15px;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #f0f0f0;
        color: #333;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

        .social-icon:hover {
            background-color: #8B0000;
            color: #fff;
        }

    .footer-logo img {
        height: 50px;
        margin-bottom: 15px;
    }

    .footer-decoration img {
        max-width: 100%;
        height: auto;
        opacity: 0.8;
    }

    .footer-bottom {
        border-top: 1px solid #eee;
        padding-top: 20px;
    }

    .footer-policies {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

        .footer-policies a {
            color: #666;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .footer-policies a:hover {
                color: #8B0000;
            }

    /* Responsive */
    @@media (max-width: 992px) {
        .hero-content

    {
        flex-direction: column;
    }

    .hero-text {
        text-align: center;
        margin-bottom: 40px;
    }

    .hero-image:before {
        left: 50%;
        transform: translateX(-50%);
    }

    .hero-image img {
        transform: none;
    }

    .faq-container {
        grid-template-columns: 1fr;
    }

    }

    @@media (max-width: 768px) {
        .main-nav

    {
        flex-direction: column;
        gap: 15px;
    }

    .nav-links {
        width: 100%;
        justify-content: center;
        flex-wrap: wrap;
    }

    .nav-actions {
        width: 100%;
        justify-content: center;
    }

    .hero-text h1 {
        font-size: 2.5rem;
    }

    .footer-main {
        grid-template-columns: 1fr;
    }

    .footer-column {
        text-align: center;
    }

    .footer-decoration {
        display: none;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const faqQuestions = document.querySelectorAll('.faq-question');

        faqQuestions.forEach(question => {
            question.addEventListener('click', function() {
                const faqItem = this.parentElement;
                const answer = faqItem.querySelector('.faq-answer');
                const toggle = faqItem.querySelector('.faq-toggle i');

                // Close all other FAQ items
                document.querySelectorAll('.faq-item').forEach(item => {
                    if (item !== faqItem) {
                        item.classList.remove('active');
                        item.querySelector('.faq-answer').classList.remove('visible');
                        item.querySelector('.faq-toggle i').className = 'fas fa-plus-circle';
                    }
                });

                // Toggle current FAQ item
                faqItem.classList.toggle('active');
                answer.classList.toggle('visible');

                if (faqItem.classList.contains('active')) {
                    toggle.className = 'fas fa-minus-circle';
                } else {
                    toggle.className = 'fas fa-plus-circle';
                }
            });
        });
    });
</script>