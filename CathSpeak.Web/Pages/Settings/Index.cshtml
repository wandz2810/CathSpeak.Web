@page
@model CathSpeak.Web.Pages.Settings.IndexModel
@{
    ViewData["Title"] = "Settings";
}

<div class="settings-container">
    <div class="page-header">
        <h1><i class="fas fa-cog"></i> Settings</h1>
        <p>Customize your CathSpeak experience</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            @Model.SuccessMessage
        </div>
    }

    <div class="settings-content">
        <form method="post" class="settings-form">
            <!-- Notification Settings -->
            <div class="settings-section">
                <h3><i class="fas fa-bell"></i> Notifications</h3>
                <p class="section-description">Choose how you want to be notified about activities</p>

                <div class="setting-item">
                    <div class="setting-info">
                        <label>Email Notifications</label>
                        <span>Receive email updates about important activities</span>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input asp-for="Settings.EmailNotifications" type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <label>Friend Requests</label>
                        <span>Get notified when someone sends you a friend request</span>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input asp-for="Settings.FriendRequests" type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <label>Video Call Invitations</label>
                        <span>Receive notifications for video call invitations</span>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input asp-for="Settings.VideoCallInvitations" type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Audio & Video Settings -->
            <div class="settings-section">
                <h3><i class="fas fa-volume-up"></i> Audio & Video</h3>
                <p class="section-description">Configure your audio and video preferences</p>

                <div class="setting-item">
                    <div class="setting-info">
                        <label>Message Sounds</label>
                        <span>Play sound when receiving new messages</span>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input asp-for="Settings.MessageSounds" type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <label>Auto-join Video Calls</label>
                        <span>Automatically accept video calls from friends</span>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input asp-for="Settings.AutoJoinVideoCall" type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Privacy Settings -->
            <div class="settings-section">
                <h3><i class="fas fa-shield-alt"></i> Privacy</h3>
                <p class="section-description">Control your privacy and who can contact you</p>

                <div class="setting-item">
                    <div class="setting-info">
                        <label>Show Online Status</label>
                        <span>Let others see when you're online</span>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input asp-for="Settings.ShowOnlineStatus" type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <label>Messages from Non-Friends</label>
                        <span>Allow messages from people who aren't your friends</span>
                    </div>
                    <div class="setting-control">
                        <label class="toggle-switch">
                            <input asp-for="Settings.AllowMessagesFromStrangers" type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            <div class="settings-section">
                <h3><i class="fas fa-user-cog"></i> Account</h3>
                <p class="section-description">Manage your account preferences</p>

                <div class="account-actions">
                    <a href="/Profile" class="btn btn-outline">
                        <i class="fas fa-user-edit"></i> Edit Profile
                    </a>
                    <button type="button" class="btn btn-outline-warning">
                        <i class="fas fa-key"></i> Change Password
                    </button>
                    <button type="button" class="btn btn-outline-info">
                        <i class="fas fa-download"></i> Export Data
                    </button>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Settings
                </button>
                <a href="/Dashboard" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .settings-container {
        padding: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .page-header h1 {
            color: #333;
            margin-bottom: 0.5rem;
        }

        .page-header p {
            color: #666;
            margin: 0;
        }

    .settings-content {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .settings-form {
        padding: 2rem;
    }

    .settings-section {
        margin-bottom: 2.5rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #e1e5e9;
    }

        .settings-section:last-of-type {
            border-bottom: none;
            margin-bottom: 1rem;
        }

        .settings-section h3 {
            color: #333;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .section-description {
        color: #666;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }

    .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .setting-item:last-child {
            border-bottom: none;
        }

    .setting-info label {
        display: block;
        font-weight: 500;
        color: #333;
        margin-bottom: 0.25rem;
    }

    .setting-info span {
        color: #666;
        font-size: 0.9rem;
    }

    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        border-radius: 24px;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            border-radius: 50%;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #667eea;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

    .account-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e1e5e9;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background: #667eea;
        color: white;
    }

    .btn-outline {
        background: transparent;
        border: 1px solid #ddd;
        color: #666;
    }

    .btn-outline-warning {
        background: transparent;
        border: 1px solid #ffc107;
        color: #ffc107;
    }

    .btn-outline-info {
        background: transparent;
        border: 1px solid #17a2b8;
        color: #17a2b8;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    .alert {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    @@media (max-width: 768px) {
        .setting-item

    {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }

    .account-actions {
        flex-direction: column;
    }

    .form-actions {
        flex-direction: column;
    }

    }
</style>