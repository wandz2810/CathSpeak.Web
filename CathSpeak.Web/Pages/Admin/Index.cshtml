@page
@model CathSpeak.Web.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-container">
    <div class="page-header">
        <h1><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h1>
        <p>Manage users, roles, and system settings</p>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Stats.TotalUsers</h3>
                <p>Total Users</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon active">
                <i class="fas fa-user-check"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Stats.ActiveUsers</h3>
                <p>Active Users</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-user-tag"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Stats.TotalRoles</h3>
                <p>User Roles</p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="admin-sections">
        <div class="admin-section">
            <h2><i class="fas fa-users-cog"></i> User Management</h2>
            <p>Manage user accounts and permissions</p>

            <div class="recent-users">
                <h4>Recent Users (@Model.Users.Count)</h4>
                <div class="users-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Joined</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users.Take(10))
                            {
                                <tr>
                                    <td>
                                        <div class="user-info">
                                            <img src="@(user.AvatarImageUrl ?? "/images/default-avatar.png")"
                                                 alt="@user.Username" class="user-avatar" />
                                            <span>@user.Username</span>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="role-badge">@user.RoleName</span>
                                    </td>
                                    <td>
                                        @if (user.Status == 1)
                                        {
                                            <span class="status-badge active">Active</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge inactive">Inactive</span>
                                        }
                                    </td>
                                    <td>@user.CreateDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn btn-sm btn-outline">Edit</button>
                                            <button class="btn btn-sm btn-outline-danger">Suspend</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="admin-section">
            <h2><i class="fas fa-shield-alt"></i> Role Management</h2>
            <p>Manage user roles and permissions</p>

            <div class="roles-list">
                @foreach (var role in Model.Roles)
                {
                    <div class="role-item">
                        <div class="role-info">
                            <h4>@role.RoleName</h4>
                            <p>Role ID: @role.RoleId</p>
                        </div>
                        <div class="role-actions">
                            @if (role.Status == 1)
                            {
                                <span class="status-badge active">Active</span>
                            }
                            else
                            {
                                <span class="status-badge inactive">Inactive</span>
                            }
                            <button class="btn btn-sm btn-outline">Edit</button>
                        </div>
                    </div>
                }
            </div>

            <div class="section-actions">
                <button class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Role
                </button>
            </div>
        </div>
    </div>
</div>

